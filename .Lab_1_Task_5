ukralphabet = 'абвгґдеєжзиіїйклмнопрстуфхцчшщьюя'
alphabet = 'abcdefghijklmnopqrstuvwxyz'
number = '0123456789'
encrypt = input("Enter a clear message:")
key = 1
encrypted = ""

for letter in encrypt:
    position = alphabet.find(letter)
    newPosition = position + key

    if letter in alphabet:
        if newPosition == 26:
            newPosition = newPosition - 26
        encrypted = encrypted + alphabet[newPosition]

    position = ukralphabet.find(letter)
    newPosition = position + key
    if letter in ukralphabet:
        if newPosition == 33:
            newPosition = newPosition - 33
        encrypted = encrypted + ukralphabet[newPosition]

    position = number.find(letter)
    newPosition = position + key
    if letter in number:
        if newPosition == 10:
            newPosition = newPosition - 10
        encrypted = encrypted + number[newPosition]
    if letter == "":
        encrypted = encrypted + letter

print("Your cipher is:",encrypted) 
