s = input("Enter: ")
for i in s:
    print(i * 2, end = '')
print("\t")


x = float(input("First number: "))
y = float(input("Second number: "))
operation = input("Operation: ")
result = None

if operation == '+':
    result = x + y
elif operation == "-":
    result = x - y
elif operation == '*':
    result = x * y
elif operation == '/':
    result = x / y
else:
    print("Unsupported operation")

if result is not None:
    print("Result: ", result)
